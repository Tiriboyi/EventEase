@model IEnumerable<EventEase.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h2>Venues</h2>

<p>
    <a asp-action="Create" class="btn-create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Available</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.VenueName)</td>
                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                <td>
                    <input type="checkbox" disabled checked="@item.Availability" />
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.VenueName" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VenueId" class="btn-edit">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.VenueId" class="btn-details">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.VenueId" class="btn-delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>