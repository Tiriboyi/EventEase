@model IEnumerable<EventEase.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Venues</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card h-100">                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <div class="card-img-wrapper" style="height: 200px; overflow: hidden;">
                            <img src="@item.ImageUrl" class="card-img-top w-100 h-100" alt="@item.VenueName" style="object-fit: cover;">
                        </div>
                    }
                    else
                    {
                        <div class="card-img-wrapper bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="bi bi-building text-muted" style="font-size: 3rem;"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@item.VenueName</h5>
                        <p class="card-text">
                            <i class="bi bi-geo-alt-fill"></i> @item.Location<br>
                            <i class="bi bi-people-fill"></i> Capacity: @item.Capacity<br>
                            <span class="badge @(item.Availability ? "bg-success" : "bg-danger")">
                                @(item.Availability ? "Available" : "Not Available")
                            </span>
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100">
                            <a asp-action="Edit" asp-route-id="@item.VenueId" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.VenueId" class="btn btn-outline-info">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.VenueId" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>