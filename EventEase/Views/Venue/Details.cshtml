@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<h2>Venue Details</h2>

<div>
    <h4>@Model.VenueName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.VenueName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.VenueName)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Location)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Location)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Capacity)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Capacity)</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.VenueName" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-primary crud-button edit">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.VenueId" class="btn btn-danger crud-button delete">Delete</a>
    <a asp-action="Index" class="btn btn-secondary crud-button">Back to List</a>
</div>