@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Edit Venue";
}

<h2>Edit Venue</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="VenueId" />
    <div class="form-group mb-3">
        <label asp-for="VenueName" class="control-label"></label>
        <input asp-for="VenueName" class="form-control" />
        <span asp-validation-for="VenueName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Location" class="control-label"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Capacity" class="control-label"></label>
        <input asp-for="Capacity" class="form-control" type="number" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Availability" class="control-label"></label>
        <input asp-for="Availability" class="form-check-input" type="checkbox" />
        <span asp-validation-for="Availability" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label class="control-label">Venue Image</label>
        <input type="file" name="imageFile" class="form-control" accept="image/*" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.VenueName" style="max-width: 200px; max-height: 200px;" class="mt-2" />
        }
    </div>
    <div class="form-group mb-3">
        <input type="submit" value="Save" class="btn btn-primary crud-button edit" />
        <a asp-action="Index" class="btn btn-secondary crud-button">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}