@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>

<div>
    <h4>Booking #@Model.BookingId</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.BookingId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BookingId)</dd>
        <dt class="col-sm-2">Event Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Event.EventName)</dd>
        <dt class="col-sm-2">Event Date</dt>
        <dd class="col-sm-10">@Model.Event.EventDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Venue Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Venue.VenueName)</dd>
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Venue.Location)</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Venue.Capacity)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.BookingDate)</dt>
        <dd class="col-sm-10">@Model.BookingDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Event.ImageUrl))
            {
                <img src="@Model.Event.ImageUrl" alt="@Model.Event.EventName" style="max-width: 200px; max-height: 200px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-primary crud-button edit">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.BookingId" class="btn btn-danger crud-button delete">Delete</a>
    <a asp-action="Index" class="btn btn-secondary crud-button">Back to List</a>
</div>