@model EventEase.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
}

<h2>Create Booking</h2>

<form asp-action="Create">
    <div class="form-group mb-3">
        <label asp-for="EventId" class="control-label"></label>
        <select asp-for="EventId" class="form-control" asp-items="@(ViewData["EventId"] as SelectList)">
            <option value="">Select an event</option>
        </select>
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="VenueId" class="control-label"></label>
        <select asp-for="VenueId" class="form-control" asp-items="@(ViewData["VenueId"] as SelectList)">
            <option value="">Select a venue</option>
        </select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="BookingDate" class="control-label"></label>
        <input asp-for="BookingDate" class="form-control" type="date" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <input type="submit" value="Create" class="btn btn-success crud-button create" />
        <a asp-action="Index" class="btn btn-secondary crud-button">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}