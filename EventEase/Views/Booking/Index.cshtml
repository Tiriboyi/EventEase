@model IEnumerable<EventEase.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>

<p>
    <a asp-action="Create" class="btn-create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Event</th>
            <th>Venue</th>
            <th>Booking Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Event.EventName)</td>
                <td>@Html.DisplayFor(modelItem => item.Venue.VenueName)</td>
                <td>@Html.DisplayFor(modelItem => item.BookingDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn-edit">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.BookingId" class="btn-details">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn-delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>