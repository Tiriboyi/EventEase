@model IEnumerable<EventEase.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Bookings</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.Event.EventName</h5>
                        <p class="card-text">
                            <i class="bi bi-geo-alt-fill"></i> @item.Venue.VenueName<br>
                            <i class="bi bi-calendar-check"></i> Booked for: @item.BookingDate.ToString("MMM dd, yyyy HH:mm")
                        </p>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100">
                            <a asp-action="Edit" asp-route-id="@item.BookingId" class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.BookingId" class="btn btn-outline-info">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.BookingId" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>