@model EventEase.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<h2>Event Details</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.EventName</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Event Name</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.EventName)</dd>
                    
                    <dt class="col-sm-3">Event Date</dt>
                    <dd class="col-sm-9">@Model.EventDate.ToString("MMMM dd, yyyy")</dd>
                    
                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                    
                    <dt class="col-sm-3">Venue</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.Venue.VenueName)</dd>
                    
                    <dt class="col-sm-3">Event Type</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.EventType.TypeName)</dd>
                </dl>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-img-top">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.EventName" class="img-fluid rounded" style="width: 100%; height: 300px; object-fit: cover;">
                }
                else
                {
                    <img src="/images/istockphoto.jpg" alt="Default Event Image" class="img-fluid rounded" style="width: 100%; height: 300px; object-fit: cover;">
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-primary">
        <i class="bi bi-pencil"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>