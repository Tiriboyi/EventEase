@model IEnumerable<EventEase.Models.Event>

@{
    ViewData["Title"] = "Events";
}

<h2>Events</h2>

<p>
    <a asp-action="Create" class="btn-create">Create New</a>
</p>

<table class="table" id="events-table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Venue</th>
            <th>Event Type</th>
            <th>Description</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.EventName)</td>
                <td>@Html.DisplayFor(modelItem => item.EventDate)</td>
                <td>@Html.DisplayFor(modelItem => item.Venue.VenueName)</td>
                <td>@Html.DisplayFor(modelItem => item.EventType.TypeName)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.EventName" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventId" class="btn-edit">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.EventId" class="btn-details">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.EventId" class="btn-delete">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>